<h1><mark>What Have you Done?</mark></h1>
<h2>{{address}}</h2>

<h2 id='house-reps-heading'>House</h2>

{{#each houseRepInfo as |rep|}}
  <a href='votes?chamber=0&id={{rep.name}}'><div><img class="rep-photo" src="{{rep.photoUrl}}"> <div class="rep-name-and-party"><div class="rep-name"><h3>{{rep.name}}</h3></div><div class="rep-party"><h4>{{rep.party}}</h4></div></div></div></a>
{{/each}}

<h2 id='house-reps-heading'>Senate</h2>

{{#each senateRepInfo as |rep|}}
  <a href='votes?chamber=1&id={{rep.name}}'><div><img class="rep-photo" src="{{rep.photoUrl}}"> <div class="rep-name-and-party"><div class="rep-name"><h3>{{rep.name}}</h3></div><div class="rep-party"><h4>{{rep.party}}</h4></div></div></div></a>
{{/each}}
